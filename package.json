{
  "name": "weather-app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AirSodaz/weather-app.git"
  },
  "description": "A beautiful cross-platform weather application.",
  "author": {
    "name": "AirSodaz",
    "email": "asodaz@outlook.com"
  },
  "private": true,
  "version": "0.1.2",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"cross-env BROWSER=none npm run react:dev\" \"npm run electron:dev\"",
    "react:dev": "vite",
    "electron:dev": "wait-on tcp:5173 && tsc -p electron/tsconfig.json && electron .",
    "build": "tsc -b && vite build",
    "android:build": "npm run build && npx cap sync",
    "preview": "vite preview",
    "tauri": "tauri"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@emotion/is-prop-valid": "^1.4.0",
    "@tauri-apps/api": "^1.5.0",
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "electron-store": "^8.1.0",
    "framer-motion": "^12.24.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.0.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@tauri-apps/cli": "^1.5.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.0",
    "vite": "^5.2.0",
    "vite-plugin-pwa": "^1.2.0",
    "wait-on": "^7.2.0"
  }
